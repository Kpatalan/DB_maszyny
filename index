  <div class="main">
    <div class="header">📆 Dashboard Poleasingowe.pl</div>

    <div class="tabs">
      <div class="tab active" data-tab="tab1">🗃️ Generator ogłoszeń</div>
      <div class="tab" data-tab="tab2">Wylicytowane dziś</div>
      <div class="tab" data-tab="tab3">Dodane dziś</div>
    </div>

    <div id="tab1" class="tab-content active">
      <h2>Wyślij plik PDF do generatora ogłoszeń</h2>
      <form
        id="uploadForm"
        action="https://kamilpe.app.n8n.cloud/webhook/2eda0e92-e13b-424b-a4a5-69b805515a0e"
        method="post"
        enctype="multipart/form-data"
        target="dummyFrame"
      >
        <input type="file" name="file" accept="application/pdf" required />
        <button type="submit">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20">
            <path d="M5 20h14v-2H5v2zm7-18L5.33 9h5.34v6h4.66V9h5.34L12 2z" />
          </svg>
          Wyślij PDF
          <div id="loadingSpinner"><div class="spinner"></div></div>
        </button>
      </form>
    </div>

    <div id="tab2" class="tab-content">
      <p>Tutaj będą wylicytowane dzisiaj ogłoszenia.</p>
    </div>

    <div id="tab3" class="tab-content">
      <h3>Ogłoszenia ze statusem NOWE:</h3>
      <div id="dodane-dzis">Ładowanie danych...</div>
    </div>

    <iframe name="dummyFrame" style="display:none;"></iframe>
  </div>

  <script>
    // Obsługa zakładek
    const tabs = document.querySelectorAll('.tab');
    const contents = document.querySelectorAll('.tab-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'));
        contents.forEach(c => c.classList.remove('active'));
        tab.classList.add('active');
        document.getElementById(tab.dataset.tab).classList.add('active');

        if (tab.dataset.tab === 'tab3') ladujDodaneDzis();
      });
    });

    // Upload pliku
    document.getElementById('uploadForm').addEventListener('submit', function (e) {
      document.getElementById('loadingSpinner').style.display = 'inline-block';
      setTimeout(() => {
        fetch(this.action, { method: 'POST', body: new FormData(this) })
          .then(r => r.json())
          .then(data => {
            const params = new URLSearchParams(data).toString();
            window.location.href = `ogloszenie.html?${params}`;
          })
          .catch(err => {
            console.error('Błąd uploadu PDF:', err);
            alert('Nie udało się wysłać PDF.');
          });
      }, 2500);
      e.preventDefault();
    });

    // Ładowanie ogłoszeń
    async function ladujDodaneDzis() {
      const kontener = document.getElementById('dodane-dzis');
      kontener.textContent = 'Ładuję…';

      try {
        const res = await fetch('https://kamilpe.app.n8n.cloud/webhook/374d6c55-e9b2-4169-a65c-9d48b64d9cb2');
        if (!res.ok) throw new Error(`HTTP ${res.status}`);

        const wynik = await res.json();
        const dane = Array.isArray(wynik) ? wynik
                    : Array.isArray(wynik.body) ? wynik.body
                    : Array.isArray(wynik.data) ? wynik.data
                    : Array.isArray(wynik.response?.body) ? wynik.response.body
                    : [];

        if (!Array.isArray(dane) || dane.length === 0) {
          kontener.textContent = 'Brak danych lub niepoprawny format odpowiedzi.';
          return;
        }

        const produkty = dane
          .map(r => (r['Produkty Nowe'] || '').trim())
          .filter(txt => txt !== '');

        if (produkty.length === 0) {
          kontener.textContent = 'Brak dostępnych produktów.';
          return;
        }

        kontener.innerHTML = '';
        produkty.forEach((prod, i) => {
          const div = document.createElement('div');
          Object.assign(div.style, {
            marginBottom: '1.5rem',
            padding: '1rem',
            border: '1px solid #ddd',
            borderRadius: '8px',
            backgroundColor: '#fff',
          });
          div.innerHTML = `<strong>${i + 1}. ${prod}</strong>`;
          kontener.appendChild(div);
        });

      } catch (err) {
        console.error('Błąd ładowania ogłoszeń:', err);
        kontener.textContent = 'Błąd ładowania danych.';
      }
    }

    // Jeśli zakładka 3 jest aktywna po załadowaniu strony
    if (document.querySelector('[data-tab="tab3"]').classList.contains('active')) {
      ladujDodaneDzis();
    }
  </script>
